      <div class="card" style="border: none;">
        <div class="card-body">
          <div class="card" style="border: none;">
            <div class="card-body">
              <div class="story-content">
                <%= render(partial: "stories/form/form", locals: { story: @story }) %>

                <p id="characterCounter" class="small"><span></span> character(s).</p>
