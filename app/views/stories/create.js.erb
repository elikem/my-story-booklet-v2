<% if @story.save %>
  // replace new story form with saved story
  $(".new-story-card").replaceWith("<%= raw j render partial: "dashboard/story/user_with_story" %>");
  toastr.success("Your story was successfully saved.");
<% else %>
  <% @error_messages = @story.errors.full_messages %>

  <% if @error_messages.any? %>
    <% @error_messages.each do |message| %>
      toastr.error("<%= raw j message %>");
    <% end %>
  <% end %>
<% end %>