<div class="row vh-100">
  <div class="col-12 align-self-center mr-auto ml-auto" style="max-width: 480px;">
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-5">
          <h3>Sign up</h3>
          <p>Fill in the form below to create your account.</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>

          <div>
            <label class="font-weight-bold text-dark small">EMAIL ADDRESS</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i data-feather="mail"></i></span>
              </div>
              <%= f.email_field :email, autofocus: true, placeholder: "jane.doe@example.com", class: "form-control" %>
            </div>
          </div>

          <div class="mt-4">
            <label class="font-weight-bold text-dark small">NEW PASSWORD</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i data-feather="lock"></i></span>
              </div>
              <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
            </div>
          </div>

          <div>
            <label class="font-weight-bold text-dark small">CONFIRM NEW PASSWORD</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i data-feather="lock"></i></span>
              </div>
              <%= f.password_field :password_confirmation, placeholder: "Password", class: "form-control" %>
            </div>
          </div>

          <div class="mt-4">
            <label class="font-weight-bold text-dark small">FIRST NAME</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i data-feather="user"></i></span>
              </div>
              <%= f.text_field :first_name, placeholder: "Jane", class: "form-control" %>
            </div>
          </div>

          <div class="mt-4">
            <label class="font-weight-bold text-dark small">LAST NAME</label>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text"><i data-feather="user"></i></span>
              </div>
              <%= f.text_field :last_name, placeholder: "Doe", class: "form-control" %>
            </div>
          </div>

          <div class="mt-4">
            <label class="font-weight-bold text-dark small">COUNTRY</label>
            <div class="form-group">
              <%= f.select :country_of_residence, CountryList.all, {:prompt => "Country of Residence"}, {class: "form-control selectpicker", "data-live-search": "true"} %>
            </div>
          </div>



          <div class="mt-4">
            <%= f.submit("Sign up", class: "btn btn-primary w-100 py-2", style: "font-size: 16px;") %>
          </div>

          <div class="mt-5 text-center">
            <%= render("devise/shared/links") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>